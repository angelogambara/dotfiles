# --- Backup / Arch Linux management ---
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/borg create *

# --- System updates ---
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/pacman -Sy
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/pacman -Syu
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/pacman -Syu --needed
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/pacman -Syu --needed --noconfirm
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/pacman -Syu --noconfirm
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/pacman -Syu --noconfirm --needed

# --- System power management ---
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/systemctl reboot
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/systemctl poweroff
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/systemctl suspend
